<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:id="@+id/container"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:background="@color/colorPrimary"
                                             tools:context="cs147.picoachu.ChallengesActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="416dp"
        android:layout_height="150dp"
        android:layout_marginBottom="8dp"

        android:gravity="center_horizontal"
        android:paddingTop="30dp"
        android:text="Topic Board"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textSize="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"/>

    <ImageView
        android:id="@+id/symmetry"
        android:layout_width="128dp"
        android:layout_height="127dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="130dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.129"
        app:srcCompat="@drawable/symmetry1"/>

    <TextView
        android:id="@+id/symmetryText"
        android:layout_width="128dp"
        android:layout_height="41dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="Symmetry"
        android:textSize="25dp"
        app:layout_constraintBottom_toTopOf="@+id/symmetry"
        app:layout_constraintEnd_toEndOf="@+id/symmetry"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/symmetry"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.943"
        tools:ignore="MissingConstraints"/>

    <ImageView
        android:id="@+id/depth"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="8dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="@+id/symmetry"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/symmetry"
        app:layout_constraintTop_toTopOf="@+id/symmetry"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/depth"/>

    <TextView
        android:id="@+id/depthText"
        android:layout_width="128dp"
        android:layout_height="41dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="Depth"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="@+id/symmetryText"
        app:layout_constraintEnd_toEndOf="@+id/depth"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/depth"
        app:layout_constraintTop_toTopOf="@+id/symmetryText"
        app:layout_constraintVertical_bias="1.0"/>

    <ImageView
        android:id="@+id/brightness"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="84dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="@+id/symmetry"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/symmetry"
        app:layout_constraintTop_toBottomOf="@+id/symmetry"
        app:srcCompat="@drawable/brightness"/>

    <TextView
        android:id="@+id/brightnessText"
        android:layout_width="123dp"
        android:layout_height="41dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="Brightness"
        android:textSize="25dp"
        app:layout_constraintBottom_toTopOf="@+id/brightness"
        app:layout_constraintEnd_toEndOf="@+id/brightness"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/brightness"
        app:layout_constraintTop_toBottomOf="@+id/symmetry"
        app:layout_constraintVertical_bias="0.794"/>

    <ImageView
        android:id="@+id/line"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="@+id/brightness"
        app:layout_constraintEnd_toEndOf="@+id/depth"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/depth"
        app:layout_constraintTop_toTopOf="@+id/brightness"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/line"/>

    <TextView
        android:id="@+id/lineText"
        android:layout_width="128dp"
        android:layout_height="41dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="Line"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="@+id/brightnessText"
        app:layout_constraintEnd_toEndOf="@+id/line"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/line"
        app:layout_constraintTop_toTopOf="@+id/brightnessText"
        app:layout_constraintVertical_bias="0.47"/>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="0dp"
        android:layout_marginStart="0dp"
        android:background="@color/colorPrimaryDark"
        app:itemIconTint="@color/navigation_item_selector"
        app:itemTextColor="@color/navigation_item_selector"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/navigation"/>

</android.support.constraint.ConstraintLayout>
